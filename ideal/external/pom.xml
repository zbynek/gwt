<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.google.gwt</groupId>
        <artifactId>gwt</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <artifactId>external</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>external tools</name>
    <packaging>pom</packaging>

    <properties>
        <tools>../tools</tools>
        <pathToToolsFromHere>../../${tools}/lib</pathToToolsFromHere>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <version>2.4</version>
                <executions>
                    <execution>
                        <id>guava</id>
                        <phase>package</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>${pathToToolsFromHere}/guava/guava-19.0/guava-19.0-rebased.jar</file>
                            <groupId>com.google.gwt.external</groupId>
                            <artifactId>com.google.guava.guava</artifactId>
                            <version>19.0</version>
                            <packaging>jar</packaging>
                        </configuration>
                    </execution>
                    <execution>
                        <id>sourcemap</id>
                        <phase>package</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>${pathToToolsFromHere}/jscomp/20160315/sourcemap-rebased.jar</file>
                            <groupId>com.google.gwt.external</groupId>
                            <artifactId>jscomp-sourcemap</artifactId>
                            <version>20160315</version>
                            <packaging>jar</packaging>
                        </configuration>
                    </execution>
                    <execution>
                        <id>jdt</id>
                        <phase>package</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>${pathToToolsFromHere}/eclipse/org.eclipse.jdt.core_3.17.0.v20190306-2240.jar</file>
                            <groupId>com.google.gwt.external</groupId>
                            <artifactId>org.eclipse.jdt.core</artifactId>
                            <version>3.17.0.v20190306-2240</version>
                            <packaging>jar</packaging>
                        </configuration>
                    </execution>
                    <execution>
                        <id>protobuf-java</id>
                        <phase>package</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>${pathToToolsFromHere}/protobuf/protobuf-2.5.0/protobuf-java-rebased-2.5.0.jar</file>
                            <groupId>com.google.gwt.external</groupId>
                            <artifactId>protobuf-java</artifactId>
                            <version>2.5.0</version>
                            <packaging>jar</packaging>
                        </configuration>
                    </execution>
                    <execution>
                        <id>json</id>
                        <phase>package</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>${pathToToolsFromHere}/json/android-sdk-19.1/json-android-rebased.jar</file>
                            <groupId>com.google.gwt.external</groupId>
                            <artifactId>json-android-rebased</artifactId>
                            <version>19.1</version>
                            <packaging>jar</packaging>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>