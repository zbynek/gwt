<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.gwtproject</groupId>
        <artifactId>gwt</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <artifactId>external</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>external tools</name>
    <packaging>pom</packaging>

    <properties>
        <tools>../tools</tools>
        <pathToToolsFromHere>../../${tools}/lib</pathToToolsFromHere>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <version>2.4</version>
                <executions>
                    <execution>
                        <id>guava-failureaccess</id>
                        <phase>package</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>${pathToToolsFromHere}/guava/guava-33.0/failureaccess-1.0.2-rebased.jar</file>
                            <groupId>org.gwtproject.external</groupId>
                            <artifactId>com.google.guava.failureaccess</artifactId>
                            <version>1.0.2</version>
                            <packaging>jar</packaging>
                        </configuration>
                    </execution>
                    <execution>
                        <id>guava</id>
                        <phase>package</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>${pathToToolsFromHere}/guava/guava-33.0/guava-33.0.0-jre-rebased.jar</file>
                            <groupId>org.gwtproject.external</groupId>
                            <artifactId>com.google.guava.guava</artifactId>
                            <version>33.0.0</version>
                            <packaging>jar</packaging>
                        </configuration>
                    </execution>
                    <execution>
                        <id>sourcemap</id>
                        <phase>package</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>${pathToToolsFromHere}/jscomp/20231112/sourcemap-rebased.jar</file>
                            <groupId>org.gwtproject.external</groupId>
                            <artifactId>jscomp-sourcemap</artifactId>
                            <version>20231112</version>
                            <packaging>jar</packaging>
                        </configuration>
                    </execution>
                    <execution>
                        <id>protobuf-java</id>
                        <phase>package</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>${pathToToolsFromHere}/protobuf/protobuf-2.5.0/protobuf-java-rebased-2.5.0.jar</file>
                            <groupId>org.gwtproject.external</groupId>
                            <artifactId>protobuf-java</artifactId>
                            <version>2.5.0</version>
                            <packaging>jar</packaging>
                        </configuration>
                    </execution>
                    <execution>
                        <id>json</id>
                        <phase>package</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>${pathToToolsFromHere}/json/android-sdk-19.1/json-android-rebased.jar</file>
                            <groupId>org.gwtproject.external</groupId>
                            <artifactId>json-android-rebased</artifactId>
                            <version>19.1</version>
                            <packaging>jar</packaging>
                        </configuration>
                    </execution>
                    <execution>
                        <id>gss</id>
                        <phase>package</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>${pathToToolsFromHere}/gss/2015-11-04/closure-stylesheets-library-20151104-rebased.jar</file>
                            <groupId>org.gwtproject.external</groupId>
                            <artifactId>closure-stylesheets-library</artifactId>
                            <version>20151104-rebased</version>
                            <packaging>jar</packaging>
                        </configuration>
                    </execution>
                    <execution>
                        <id>jsilver</id>
                        <phase>package</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>${pathToToolsFromHere}/streamhtmlparser/streamhtmlparser-jsilver-r10/streamhtmlparser-jsilver-r10-1.5-rebased.jar</file>
                            <groupId>org.gwtproject.external</groupId>
                            <artifactId>streamhtmlparser-jsilver</artifactId>
                            <version>r10-1.5-rebased</version>
                            <packaging>jar</packaging>
                        </configuration>
                    </execution>
                    <execution>
                        <id>flute</id>
                        <phase>package</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>${pathToToolsFromHere}/w3c/flute/flute-1.3-gg2.jar</file>
                            <groupId>org.gwtproject.external</groupId>
                            <artifactId>flute</artifactId>
                            <version>1.3-gg2</version>
                            <packaging>jar</packaging>
                        </configuration>
                    </execution>
                    <execution>
                        <id>ant-zipscanner</id>
                        <phase>package</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>${pathToToolsFromHere}/apache/ant-zipscanner/ant-zipscanner-1.6.5-1-rebased.jar</file>
                            <groupId>org.gwtproject.external</groupId>
                            <artifactId>ant-zipscanner</artifactId>
                            <version>1.6.5-1</version>
                            <packaging>jar</packaging>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>